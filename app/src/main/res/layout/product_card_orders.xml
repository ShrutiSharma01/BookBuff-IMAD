<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:clickable="true"
    android:elevation="13dp"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    app:cardCornerRadius="15dp"
    app:cardElevation="24dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_product_img_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:elevation="13dp"
            app:cardCornerRadius="13dp"
            app:cardElevation="13dp">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:padding="12dp"
                android:src="@drawable/book_sample"
                android:scaleType="fitCenter" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/product_title_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_toRightOf="@+id/cardview_product_img_cart"
            android:fontFamily="@font/raleway_bold"
            android:maxLines="1"
            android:text="@string/product_title"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/product_price_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_title_cart"
            android:layout_marginEnd="12dp"
            android:layout_toRightOf="@+id/cardview_product_img_cart"
            android:fontFamily="@font/lato_black"
            android:text="11.99$"
            android:textColor="@color/design_default_color_error"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/id_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_price_cart"
            android:layout_marginEnd="12dp"
            android:layout_toRightOf="@+id/cardview_product_img_cart"
            android:fontFamily="@font/raleway_regular"
            android:text="@string/random_generated_unique_id_from_firebase"
            android:textSize="14sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>