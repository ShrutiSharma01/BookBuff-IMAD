<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:elevation="15dp"
    android:fitsSystemWindows="true"
    app:cardCornerRadius="15dp"
    app:cardElevation="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:elevation="13dp"
            app:cardCornerRadius="13dp"
            app:cardElevation="13dp">

            <ImageView
                android:id="@+id/product_img_cart"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="fitCenter"
                android:padding="12dp"
                android:src="@drawable/book_sample" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_title_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/raleway_bold"
                android:maxLines="1"
                android:text="@string/product_title"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/product_price_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_title_cart"

                android:layout_gravity="right"
                android:layout_marginTop="90dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/cardview_product_img_cart"
                android:fontFamily="@font/lato_black"
                android:text="11.99$"
                android:textColor="@color/design_default_color_error"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>